<!-- 个人中心 -->
<view class='title'>
  <!-- <image src='../imgs/touxiang.jpg'></image> -->
  <open-data  class="userinfo-avatar image" type="userAvatarUrl"></open-data>
  <view>
    <view>
      <open-data class="userinfo-nickname" type="userNickName"></open-data>
    </view>
    <view>学习时长433小时</view>
  </view>
</view>
 <!-- 成绩 -->
  <view class='achievement'>
    <view>
      <view>{{accuracy}}%</view>
      <view>准确率</view>
    </view>
    <view class='achievement-style'>
      <view>{{frequency}}次</view>
      <view>考试次数</view>
    </view>
    <view>
      <view>{{highest}}分</view>
      <view>最高成绩</view>
    </view>
  </view>
  <!-- 颜色 -->
  <view class='color'></view>
  <!-- 功能 -->
  <view class='function' bindtap='personal_curriculum'>
    <view>我的课程</view>
    <image src='../imgs/arrow.png'></image>
  </view>
  <view class='function' bindtap='personal_order'>
    <view>我的订单</view>
    <image src='../imgs/arrow.png'></image>
  </view>
  <view class='function' bindtap='personal_collection'>
    <view>我的收藏</view>
    <image src='../imgs/arrow.png'></image>
  </view>
  <view class='function' bindtap='personal_examination'>
    <view>我的考试</view>
    <image src='../imgs/arrow.png'></image>
  </view>
  <view class='function' bindtap='personal_setup'>
    <view>其他</view>
    <image src='../imgs/arrow.png'></image>
  </view>
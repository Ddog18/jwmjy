.lunbo{
  width: 100%;height: 350rpx;
}
.lunbo image{
  width: 100%;height: 100%;
}

.introduce{
  width: 100%;display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 5% 0 0 0;
}
.introduce>view{
  width: 33%;text-align: center;
  font-size: 27rpx;
}
.introduce image{
  width: 64rpx;
}
.line{
  width: 100%;height: 20rpx;
  background: #f2f2f2;
  margin: 2% 0;
}
.company-introduce{
  width: 100%;height: 300rpx;
  position: relative;
}
.company-introduce image{
  width: 100%;height: 100%;
  position: absolute;top: 0;
  left: 0;
}
.development-title{
  text-align: center;font-size: 35rpx;
  letter-spacing: 4rpx;
  margin: 3% auto;
}
.development-content{
  width: 100%;display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 5% 0 ;
}
.development-content>view{
  width: 33%;text-align: center;
  font-size: 23rpx;color: #00b38b;
}
.development-content image{
  width: 110rpx;
}

.teacher-title{
  text-align: center;font-size: 35rpx;

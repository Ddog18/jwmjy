  margin: 3% auto;
}
.teacher-content{
  width: 100%;display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 5% 0 ;
}
.teacher-content>view{
  width: 33%;text-align: center;
  font-size: 23rpx;color: #00b38b;
}
.teacher-content image{
  width: 85%;
}

.scene-title{
  text-align: center;font-size: 35rpx;
  letter-spacing: 4rpx;
  margin: 3% auto;
}
.scene-content{
  width: 100%;text-align: center;
}
.scene-content image{
  width: 90%;height: 300rpx;
  margin: 2% auto;
}
